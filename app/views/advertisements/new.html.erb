<h1>New Advertisement</h1>
<div class="row">
	<div class="col-md-4">
		<p> Advertisement Guidelines</p>
		<ul>
			<li>Be Honest</li>
			<li>No Illegals</li>
			<li>NO Funny Business</li>
		</ul>
	</div>
	<div class="col-md-8">
		<%= form_for @advertisement do |f| %>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form-control', placeholder: "Enter Advertisement title" %>
			</div>
			<div class="form-group">
				<%= f.label :body %>
				<%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Advertisement Body" %>
			</div>
			<div class="form-group">
				<%= f.label :price %>
				<%= f.text_area :price, rows: 8, class: 'form-control', placeholder: "Enter Advertisement Price" %>
			</div>
			<div class="form-group">
				<%= f.submit "Save", class: 'btn btn-success' %>
			</div>
		<% end %>
	</div>
</div>
