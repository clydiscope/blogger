<h1>Edit Post</h1>

<div class="row">
	<div class="col-md-4">
		<p>Guidelines for post</p>
		<ul>
			<li>Use paragraphs.</li>
			<li>100 Word Limit.</li>
			<li>Add a picture!</li>
		</ul>
	</div>
	<div class="col-md-8">
		<%= form_for [@post.topic, @post] do |f| %>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form_control', placeholder: "Enter post title" %>
			</div>
			<div>
				<%= f.label :body %>
				<%= f.text_area :body, class: 'form-control', placeholder: "Enter post body" %>
			</div>
			<div>
				<%= f.submit "Save", class: 'btn btn-success' %>
			</div>
		<% end %>
	</div>
	
</div>