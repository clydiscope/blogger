<h1>Edit Question</h1>
 <div>
	<div>
		<p>Guidelines for Question</p>
		<ul>
			<li>Use Question Marks</li>
			<li>Don't forget the helping verb</li>
			<li>100 Word Maximum</li>
		</ul>
	</div>
	<div class="col-md-8">
		<%= form_for @question do |f| %>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form_control', placeholder: "Enter question title" %>
			</div>
			<div>
				<%= f.label :body %>
				<%= f.text_area :body, class: 'form-control', placeholder: "Enter question body"%>
			</div>
			<div>
				<%= f.label :resolved, class: 'checkbox inline'%>
					<%= f.check_box :resolved %>
			</div>
			<div>
				<%= f.submit "Save", class: "btn btn-success" %>
			</div>
		<% end %>
	</div>
</div>